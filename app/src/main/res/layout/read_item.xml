<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewReadFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivReadRvViewHolderImage"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvReadRvViewHolderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:lines="2"
                android:layout_toRightOf="@id/ivReadRvViewHolderImage"
                android:text="女子妇科医院做人流手术后一周体内扯出纱布"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="20dp"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/ivReadRvViewHolderDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/biz_pc_achievement_divider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/ivReadRvViewHolderImage"/>

            <TextView
                android:id="@+id/tvReadRvViewHolderResource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/ivReadRvViewHolderDivider"/>

            <Button
                android:id="@+id/btnReadRvViewHolderUnfun"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@mipmap/biz_entertainment_plugin_delete"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ivReadRvViewHolderDivider"
                android:layout_alignBaseline="@id/ivReadRvViewHolderDivider"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>