<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTopicFragment"
        android:layout_width="match_parent"
        android:layout_height="255dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/ivTopicRvViewHolderBg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/test_readfragment" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivTopicRvViewHolderHeadImage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@id/ivTopicRvViewHolderBg"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FFffffff"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/tvTopicRvViewHolderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivTopicRvViewHolderBg"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ivTopicRvViewHolderHeadImage"
                android:text="贾子冰"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tvTopicRvViewHolderDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivTopicRvViewHolderBg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="我是从事气象工作的贾子冰，关于BOSS寒潮、天气以及解冻时间的问题，问我吧！"
                android:textColor="@android:color/primary_text_light"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvTopicRvViewHolderInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:text="1076关注"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvTopicRvViewHolderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tvTopicRvViewHolderInterest"
                android:text="科技"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvTopicRvViewHolderState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tvTopicRvViewHolderType"
                android:text="进行中"
                android:textSize="12dp" />

            <CheckBox
                android:button="@null"
                android:gravity="center"
                android:id="@+id/btnTopicRvViewHolderInterest"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_topic_btn_interest"
                android:text="+ 关注"
                android:textColor="@android:color/holo_red_light" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>