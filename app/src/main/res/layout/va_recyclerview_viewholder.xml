<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <!--
                <SurfaceView
                    android:id="@+id/surfaceViewVaRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />  -->

                <VideoView
                    android:id="@+id/vvVaRvViewHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/btnVaRvViewHolderListPlay"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/biz_video_list_play_icon_big"
                    android:layout_gravity="center"/>

                <CheckBox
                    android:button="@null"
                    android:id="@+id/btnVaRvViewHolderPlayOrPause"
                    android:background="@drawable/selector_va_video_playorpause"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnVaRvViewHolderClose"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/biz_news_list_ad_video_close_btn"
                    android:layout_gravity="right"
                    android:visibility="gone"/>

            </FrameLayout>

            <TextView
                android:id="@+id/tvVaRvViewHolderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="荷兰青年街头向华人撒奶粉"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tvVaRvViewHolderDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="疑不满华人抢购奶粉"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/biz_pc_achievement_divider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/biz_video_list_item_time_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvVaRvViewHolderDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/biz_video_list_item_play_icon_small"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvVaRvViewHolderPlayCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1.1万"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/biz_video_list_item_tie"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvVaRvViewHolderTie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="134"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/ivVaRvViewHolderShare"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/base_list_item_share_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>